@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<ListadoPeliculas Peliculas="Peliculas" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    List<Pelicula>? Peliculas;

    protected override void OnInitialized()
    {
        Peliculas = ObtenerPeliculas();
    }

    List<Pelicula> ObtenerPeliculas()
    {
        return new List<Pelicula>()
        {
            new Pelicula { Titulo = "Demon Slayer",  FechaLanzamiento = new DateTime(2016, 11, 23) },
            new Pelicula { Titulo = "Chainsaw Man", FechaLanzamiento = new DateTime(2025, 10, 15) },
            new Pelicula { Titulo = "Los Vergadores", FechaLanzamiento = new DateTime(2010, 7, 16) }
        };
    }
}
