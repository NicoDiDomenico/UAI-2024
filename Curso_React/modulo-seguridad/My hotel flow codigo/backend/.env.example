# Variables de Entorno - MyHotelFlow Backend

# ==========================================
# Base de Datos (PostgreSQL)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=myhotelflow
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ==========================================
# JWT (JSON Web Tokens)
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# Argon2 (Password Hashing)
# ==========================================
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# ==========================================
# Redis (Cache y Blacklist)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# Seguridad
# ==========================================
LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION=900000
PASSWORD_RESET_EXPIRATION=3600000
PERMISSIONS_CACHE_TTL=900

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:5173

# ==========================================
# Aplicación
# ==========================================
PORT=3000
NODE_ENV=development
API_PREFIX=api

